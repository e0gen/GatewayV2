{
  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://localhost:5000"
      },
      "Https": {
        "Url": "https://localhost:5001"
      }
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "Microsoft.EntityFrameworkCore": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz}] [{Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      }
    ]
  },
  "ConnectionStrings": {
    "DefaultConnection": "Server=(localdb)\\mssqllocaldb;Database=EzzygateDb;Trusted_Connection=true;MultipleActiveResultSets=true",
    "ReportsConnection": "Server=(localdb)\\mssqllocaldb;Database=EzzygateReportsDb;Trusted_Connection=true;MultipleActiveResultSets=true",
    "ErrorsConnection": "Server=(localdb)\\mssqllocaldb;Database=EzzygateErrorsDb;Trusted_Connection=true;MultipleActiveResultSets=true"
  },
  "JwtSettings": {
    "SecretKey": "your-super-secret-key-that-is-at-least-32-characters-long",
    "Issuer": "Ezzygate.WebApi",
    "Audience": "Ezzygate.Clients",
    "ExpirationInMinutes": 60
  },
  "ApiSettings": {
    "DefaultVersion": "3.0",
    "SupportedVersions": ["3.0", "4.0"]
  },
  "AllowedHosts": "*"
} 